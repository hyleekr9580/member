<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="contentsstudio.kr.membershipapplication.Activity.MemberDeleteActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가입하신 정보를 확인하여 주세요\n탈퇴 버튼을 누르시면 즉시 탈퇴 됩니다."
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/del_id"
        android:text="id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/del_name"
        android:text="name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/del_email"
        android:text="email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/del_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="탈퇴사유를 알려주세요"/>
    <Button
        android:id="@+id/del_btn"
        android:text="탈퇴하기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
